<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="2dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="10dp">

        <!--Image view for displaying our image-->
        <ImageView
            android:id="@+id/idIVimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:foreground="@drawable/image_corner_radius"
            android:padding="3dp"/>

        <!--Text view for displaying our text -->


        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idIVimage"
            android:lineHeight="2dp"
            android:letterSpacing="0.05"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/artistTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="34dp"
            android:layout_toEndOf="@id/idIVimage"
            android:letterSpacing="0.05"
            android:textColor="#8c8c90"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>